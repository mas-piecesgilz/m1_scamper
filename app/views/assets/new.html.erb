<h3><%= t 'asset.new' %></h3>

<% form_for(@asset) do |f| %>
  <%= f.error_messages %>


  <div class="tform">

	  <table width=100% >

		<tr>
			<td class="leftcol"><label for="assettype"><b><%= t 'asset.assettype' %></b></label><font color="red"> * </font></td>
			<td><%= f.select :assettype, 
			                  Asset::ASSETTYPE,
			                 :prompt => "Select"  %></td>
		</tr>

		<tr>
			<td class="leftcol"><label for="cardno"><b><%= t 'asset.cardno' %></b></label><font color="red"> * </font></td>
			<td><%= f.text_field :cardno %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="name"><b><%= t 'asset.name' %></b></label><font color="red"> * </font></td>
			<td><%= f.text_field :name %></td>
		</tr>

		<tr>
			<td class="leftcol"><label for="cardno"><b><%= t 'asset.category' %></b></label><font color="red"> * </font></td>
			<td><%= f.text_field :category %></td>
		</tr>
		</table>
	</div>



  <p>
    <%= f.submit (t 'icms.submit') %>
  </p>
<% end %>

<%= link_to (t 'icms.back'), assets_path %>