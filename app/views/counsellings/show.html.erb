<div class="tform">
	<table>
		<tr>
			<th colspan=2>Student & File </th>
		<tr>
			<td class="leftcol"><label for="icno">IC No</label></td>
			<td><%=h @counselling.student.icno %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="matrixno">Matrix No:</label></td>
			<td><%=h @counselling.student.matrixno %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="name">Student Name:</label></td>
			<td><%=h @counselling.student.name %></td>
		</tr>
		<tr>
			<td class="leftcol"><label for="fileno">File No:</label></td>
			<td><%=h @counselling.cofile_id.blank? ? "No File" : @counselling.cofile.file_no_and_name %>
		</tr>
		
	
		<% for scsession in @counselling.scsessions %>
		
		<td bgcolor="#C0C0C0"></td><td bgcolor="#C0C0C0"></td>
		
		<tr>
			<td class="leftcol"><label for="date">Date:</label></td>
		   <td><%=h scsession.scsessiondt %></td>

	    </tr>
	
		<tr>
			<td class="leftcol"><label for="session">Session</label></td>
		   <td><%=h scsession.scsessiondtduration %></td>

	    </tr>
	
	
		<tr>
			<td class="leftcol"><label for="scsappointnum">Appointment No:</label></td>
			<td><%=h scsession.scsappointnum %></td>
        </tr>

		<tr>
			<td class="leftcol"><label for="issue">Issue:</label></td>
			<td><%=h scsession.issue %></td>
        </tr>

		<tr>
			<td class="leftcol"><label for="suggestion">Suggestion:</label></td>
			<td><%=h scsession.suggestion %></td>
	    </tr>
	
		<tr>
			<td class="leftcol"><label for="remarks">Remarks:</label></td>
			<td><%=h scsession.remarks %></td>
	    </tr>
	

	
	<% end %>
	<table>
		<BR>
	</div>

<%= link_to 'Edit', edit_counselling_path(@counselling) %> |
<%= link_to 'Back', counsellings_path %>