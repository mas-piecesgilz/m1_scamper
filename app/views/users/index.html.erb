<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Lists of Users</h2>
	</div>
	<div class="tlist">
	    <table width=90% border="0" cellpadding="0" cellspacing="0">
		  <tr>
	<th>Name</th>
    <th>Login</th>
    <th>Email</th>
	<th colspan=3 class="ac">Control</th>
  </tr>

<% for user in @users %>
  <tr>
		<td><%=h user.staff_id.blank? ? user.student.name.to_s + " (Student)": user.staff.name %></td>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => user %></td>
    <td width=10px><%= link_to image_tag("edit.png",     :border => 0, :title => 'Edit'), :action => 'edit', :id => user %></td>
    <td width=10px><%= link_to image_tag("delete.png",   :border => 0, :title => 'Delete'), user, :confirm => "Are you sure you want to delete '#{user.login}'?", :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>
<%= link_to 'New User', new_user_path %>
