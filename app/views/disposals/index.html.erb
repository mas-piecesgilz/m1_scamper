<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left"><%= t 'disposal.list' %></h2>
	</div>
	<div class="tlist">
	    <table width=90% border="0" cellpadding="0" cellspacing="0">
		  <tr>
    <th><%= t 'disposal.asset_id' %></th>
    <th><%= t 'disposal.usedduration' %></th>
    <th><%= t 'disposal.currentvalue' %></th>
    <th><%= t 'disposal.opinion' %></th>
    <th><%= t 'disposal.status' %></th>
    <th colspan=3 class="ac">Control</th>
  </tr>

<% @disposals.each do |disposal| %>
  <tr>
	<td><%=h disposal.asset_id.blank? ? "" : disposal.asscd.name %></td>
    <td><%=h disposal.usedduration %></td>
    <td><%=h disposal.currentvalue %></td>
    <td><%=h disposal.opinion %></td>
    <td><%=h disposal.status %></td>
    <td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => disposal %></td>
	<td width=10px><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => disposal %></td>
    <td width=10px ><%= link_to 'Destroy', disposal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to (t 'disposal.create'), new_disposal_path %>