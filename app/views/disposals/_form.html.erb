<div class="tform">
  <table width=100% >
	<tr>
		<th colspan=2><%= t 'disposal.disposal_details' %></th>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="asset_id"><b><%= t 'disposal.asset_id' %></b></label><font color="red"> * </font></td>
		<td><%= f.collection_select :asset_id, Asset.find(:all), :id, :name, :include_blank => true %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="used"><b><%= t 'disposal.used' %></b></label></td>
		<td><%= f.radio_button :used,'Yes' %>Yes<%= f.radio_button :used,'true' %>No</td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="usedduration"><b><%= t 'disposal.usedduration' %></b></label></td>
		<td><%= f.text_field :usedduration %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="currentvalue"><b><%= t 'disposal.currentvalue' %></b></label><font color="red"> * </font></td>
		<td><b> RM </b><%= f.text_field :currentvalue %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="opinion"><b><%= t 'disposal.opinion' %></b></label></td>
		<td><%= f.text_field :opinion %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="recommendation"><b><%= t 'disposal.recommendation' %></b></label></td>
		<td><%= f.text_field :recommendation %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="gift"><b><%= t 'disposal.gift' %></b></label></td>
		<td><%= f.radio_button :gift,'false' %>Yes<%= f.radio_button :gift,'true' %>No</td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="status"><b><%= t 'disposal.status' %></b></label></td>
		<td><%= f.radio_button :status,'false' %>Belum<%= f.radio_button :status,'true' %>Lupus</td>
	</tr>
	
</table>
<BR>