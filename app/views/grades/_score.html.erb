<div class="score">
	<% new_or_existing = score.new_record? ? 'new'  : 'existing' %>
	<% prefix = "grade[#{new_or_existing}_score_attributes][]" %>
	
	<% fields_for prefix, score do | score_form | -%>

    <table width=100% border=0>
	   <tr>
	     <td width=130px><%= score_form.select :type_id, Score::E_TYPES, :prompt => "Select" %></td>
       <td width=240px><%= score_form.text_field :description, :size => 30 %></td>
       <td width=120px><%= score_form.text_field :marks, :size => 5 %> in %</td>
		   <td width=80px> <%= score_form.text_field :weightage, :size => 5 %></td>
       <td width=70px><%= link_to_function "remove", "$(this).up('.score').remove()" %></td>
     </tr>
    </table>
    
   
   <% end -%>
</div>

