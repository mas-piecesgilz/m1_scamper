<!-- Box -->
<div class="box">
<!-- Box Head -->
  <div class="box-head">
    <h2 class="left">Subject</h2>
	  	<div class="right">
		
		</div>
	</div>

<div class="tlist">
<table width=100%>
  <tr>
    <th>Subject Code</th>
    <th>Name</th>
    <th>Credit</th>
    <th>Status</th>
    <th colspan=3 class="ac">Control</th>
  </tr>

<% @subjects.each do |subject| %>
  <tr>
    <td><%=h subject.subjectcode %></td>
    <td><%=h subject.name %></td>
    <td><%=h subject.credit %></td>
    <td><%=h (Subject::STATUS.find_all{|disp, value| value == subject.status.to_s}).map {|disp, value| disp} %></td>
    <td width=10px><%= link_to 'Show', subject %></td>
    <td width=10px><%= link_to 'Edit', edit_subject_path(subject) %></td>
    <td width=10px><%= link_to 'Destroy', subject, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>


