<div class="asset">
	<% new_or_existing = asset.new_record? ? 'new'  : 'existing' %>
	<% prefix = "residence[#{new_or_existing}_asset_attributes][]" %>
	
	<% fields_for prefix, asset do | asset_form | -%>

   <table width=100%>
	   <tr>
       <td width=300px><%= asset_form.collection_select (:assetcode, Asset.all, :assetcode, :assetcode) %></td>
       <td width=200px><%= asset_form.collection_select (:name, Asset.all, :name, :name) %></td>
       <!--><#td width=700px>	<#%= asset_form.text_field :assettype %></td>-->
       <td width=1100px><%= link_to_function "remove", "$(this).up('.asset').remove()" %></td>
       </tr>
    </table>
   
   <% end -%>
</div>

