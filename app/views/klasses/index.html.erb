<!-- Box -->
<div class="box">
	<!-- Box Head -->
<div class="box-head">
		<h2 class="left">Lists of Class</h2>
</div>

<div class="tlist">
	<table width=100% border="0" cellpadding="0" cellspacing="0">
	<tr>
    <th>Class no</th>
    <th>Class name</th>
    <th>Intake Name</th>
    <th>Programme Name</th>
    <th colspan=3 class="ac">Control</th>
  </tr>

<% @klasses.each do |klass| %>
  <tr>
    <td><%=h klass.klass_no %></td>
    <td><%=h klass.klass_name %></td>
    <td><%=h klass.intake_id.blank? ? "-" : klass.intakeclass.name %></td>
    <td><%=h klass.programme_id.blank? ? "-" : klass.programmeclass.programme_code_with_programme_name %></td>
    <td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => klass %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => klass %></td>
    <td width=10px><%= link_to 'Destroy', klass, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Class', new_klass_path %>