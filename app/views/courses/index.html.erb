<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Course/Subject</h2>
		<div class="right">
			<!-- Search Box Here -->
		</div>
    </div>
    <div class="tlist">
	  <table width=100%>
		<tr>
		    <th>Course Code</th>
		    <th>Course Name</th>
		 <!-->   <th>Abbreviation</th>-->
		    <th>Course Administrator</th>
		    <th colspan=3 class="ac">Control</th>
		  </tr>

		<% @courses.each do |course| %>
		  <tr>
		    <td><%=h course.coursecode %></td>
		    <td><%=h course.name %></td>
		   <!--> <td><#%=h course.abbreviation %></td>-->
		    <td><%=h course.staff_id.blank? ? "No Staff" : course.admin.mykad_with_staff_name %></td>
		    <td width=5px><%= link_to 'Show', course %></td>
		    <td width=5px><%= link_to 'Edit', edit_course_path(course) %></td>
		    <td width=5px><%= link_to 'Destroy', course, :confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
		<% end %>
	  </table>
    </div>
</div>


